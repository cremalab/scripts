{
  "private": false,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "link": "lerna link",
    "clean": "lerna clean",
    "publish": "lerna publish",
    "setup": "npm run build && npm run bootstrap && npm run link",
    "setup:web": "git submodule update --init && cd ./consumers/app-web && npm i && npm i -D ../../packages/scripts-web",
    "start": "lerna run start --stream --parallel",
    "test:ci": "bash ./shell/ci.sh",
    "test:web:generators": "bash ./shell/web/testGenerators.sh",
    "test:unit": "jest --detectOpenHandles",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:lint": "eslint -c ./.eslintrc.js 'packages/**/*.{ts,tsx}'",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:pack": "lerna run test:pack --stream",
    "test:web:setup": "npm run setup && cd packages/scripts-web && npm link && cd ../../consumers/app-web && npm link @cremalab/scripts-web",
    "test:web:teardown": "cd consumers/app-web && npm unlink --no-save @cremalab/scripts-web && cd ../../packages/scripts-web && npm unlink",
    "update:web": "git pull --recurse-submodules && cd ./consumers/app-web && npm i"
  },
  "devDependencies": {
    "@types/cross-spawn": "6.0.2",
    "@types/jest": "25.2.2",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "babel-jest": "26.0.1",
    "cross-spawn": "7.0.2",
    "cross-spawn-promise": "0.10.2",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "26.0.1",
    "lerna": "3.21.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "tree-node-cli": "1.3.0",
    "ts-jest": "26.0.0",
    "typescript": "3.9.2"
  },
  "name": "scripts",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    }
  }
}
